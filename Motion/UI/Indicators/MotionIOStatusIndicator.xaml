<UserControl x:Class="MotionControllers.UI.MotionIOStatusIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MotionControllers.UI"
             xmlns:UI="clr-namespace:DeepWise.Controls;assembly=dw_base"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="48" Name="this" MinHeight="60" MaxHeight="60" MinWidth="48" MaxWidth="48">
    <Grid>
        <TextBlock x:Name="TBX_Name" Text="{Binding Path = MotionIOStatus , ElementName=this}" VerticalAlignment="Top" FontSize="14" TextAlignment="Center"/>
        <UI:StatusIndicator x:Name="indicator"   VerticalAlignment="Bottom" Width="40" Height="40" />
    </Grid>
</UserControl>
