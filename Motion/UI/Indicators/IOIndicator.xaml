<UserControl x:Class="MotionControllers.UI.IOIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MotionControllers.UI"
             xmlns:UI="clr-namespace:DeepWise.Controls;assembly=dw_base"
             mc:Ignorable="d" 
           d:DesignHeight="60" d:DesignWidth="48" Name="this" MinHeight="60" MinWidth="48">
    <Grid>
        <TextBlock x:Name="textBlock" Text="Title" VerticalAlignment="Top" FontSize="14" TextAlignment="Center"></TextBlock>
        <UI:StatusIndicator MouseDown="indicator_MouseDown" x:Name="indicator" Height="40" Width="40" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
