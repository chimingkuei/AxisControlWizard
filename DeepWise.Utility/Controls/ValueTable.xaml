<UserControl x:Class="DeepWise.Controls.ValueTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeepWise.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="this">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="cvt_b2v"/>
    </UserControl.Resources>
    <Grid>
        <DataGrid x:Name="dataGrid" AutoGeneratedColumns="dataGrid_AutoGeneratedColumns">
            <DataGrid.Columns>
                <DataGridTemplateColumn x:Name="columnButton" Width="Auto" d:Visibility="Visible">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Margin="-1" Content="{Binding ButtonContent ,Mode=OneWay,RelativeSource={RelativeSource  Mode=FindAncestor,AncestorType=local:ValueTable}}" Click="btnView_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
