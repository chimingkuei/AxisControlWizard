<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeepWise.Test"
        xmlns:UI="clr-namespace:DeepWise.Controls;assembly=dw_base"
        xmlns:AccessControls="clr-namespace:DeepWise.AccessControls;assembly=dw_base" x:Class="DeepWise.Test.PropertyGridCollectionDemo"
        mc:Ignorable="d"
        Title="PropertyGridDemo" 
        SizeToContent="WidthAndHeight"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        Width="800"
        MinHeight="400"
        WindowStartupLocation="CenterScreen" x:Name="this">
    <UI:PropertyGrid LabelWidth="2*" FieldWidth="1*" FontSize="24" x:Name="propertyGrid" Margin="10">
        <local:PropertyGridCollectionDemoObject/>
    </UI:PropertyGrid>
</Window>
